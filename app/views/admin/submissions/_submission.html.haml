- cache object do
  %td.table-text= object.site_name
  %td.table-text.image
    -# TODO: refactor this with presenter
    = image_tag(url_for(object.image.variant(resize_to_limit: [200, nil])))
  
  %td.table-text= object.reliable
  %td.table-text= object.type_name
  %td.table-text= object.comment
  %td.table-text= object.tag_list
  %td.table-text= object.record_taken.to_date.strftime "%d/%m/%y" if object.record_taken

  -# - if admin?
